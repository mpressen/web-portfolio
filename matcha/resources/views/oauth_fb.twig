{% extends 'templates/app.twig' %}

{% block content %}
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-default">
			<div class="panel-heading">Welcome {{ user_name }}, please choose a username and a password</div>
			<div class="panel-body">
				<form method="post" action="{{ path_for('auth.signFB') }}">
					<div class="form-group{% if errors.login %} has-error{% endif %}">
						<label for="password">Username</label>
						<input type="text" id="login" name="login" value="" class="form-control">
			    	    {% if errors.login %}
			        	    <span class="hel-block">{{ errors.login }}</span>
			       		{% endif %}
		       		</div>
		       	{% if 'email' in needed %}
					<div class="form-group{% if errors.email %} has-error{% endif %}">
						<label for="password">Username</label>
						<input type="text" id="email" name="email" value="" class="form-control">
			    	    {% if errors.email %}
			        	    <span class="hel-block">{{ errors.email }}</span>
			       		{% endif %}
		       		</div>
		       	{% endif %}
					<div class="form-group{% if errors.password %} has-error{% endif %}">
						<label for="password">Password</label>
						<input type="password" id="password" name="password" value="" class="form-control">
			    	    {% if errors.password %}
			        	    <span class="hel-block">{{ errors.password }}</span>
			       		{% endif %}
		       		</div>
		       		{{ csrf.field|raw }}
					<button type="submit" class="btn btn-default">Sign Up</button>
				</form>
			</div>
		</div>
	</div>
</div>
{% endblock %}